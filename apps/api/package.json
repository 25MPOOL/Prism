{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify src/index.ts",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "start": "wrangler dev src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 execute prism-db --local --file ./drizzle/migrations/0000_soft_slipstream.sql",
    "db:migrate:prod": "wrangler d1 execute prism-db --file ./drizzle/migrations/0000_soft_slipstream.sql",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.10"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.4.0"
  }
}
